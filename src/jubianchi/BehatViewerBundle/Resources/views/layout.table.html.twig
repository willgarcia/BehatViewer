{% extends 'BehatViewerBundle::layout.html.twig' %}

{% block container %}
    {% block title %}{% endblock %}

    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid">
                {% if items|count > 0 %}
                    {% block before %}{% endblock %}

                    <table class="table table-bordered table-striped tablesorter {% block sort %}{% endblock %}">
                        <thead>
                            {% block thead %}{% endblock %}
                        </thead>
                        <tbody>
                            {% block tbody %}{% endblock %}
                        </tbody>
                    </table>

                    {% block after %}{% endblock %}
                {% else %}
                    {% block alert %}{% endblock %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        JSC.require(
            'behat-viewer/table',
            function() {
                $(function() {
                    app.controller.current(new TableController('#container'));
                });
            }
        );
    </script>
{% endblock %}
